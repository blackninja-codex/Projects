<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Login</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <form action="/appointment" method="POST">
            <div class="form-group">
              <label for="title">title</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="meeting-agenda">Agenda:</label>
              <textarea id="agenda" name="agenda" rows="10" cols="50"></textarea>
            </div>
            <div class="form-group">
              <label for="meeting-time">Time:</label>
              <input type="time" id="meeting-time" name="time">
            </div>
            <div class="form-group">
              <label for="guest-name">Guest</label>
              <input type="text" class="form-control" name="guest">
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
          </form>

        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/footer') %>